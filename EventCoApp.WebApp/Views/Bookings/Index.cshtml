@model IEnumerable<BookingListItemViewModel>

@{ ViewData["Title"] = "My Bookings";


    int PageNumber = (int)ViewData["PageNumber"];
    int PageSize = (int)ViewData["PageSize"];
    int TotalItemCount = (int)ViewData["TotalItemCount"]; }
<section class="about-banner relative">
    <div class="row d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="row d-flex align-items-center justify-content-center">
                <div class="about-content col-lg-12">
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="row">
        <div class="col text-center">
            <h1>My Bookings</h1>
            <hr />
        </div>
    </div>
    <div class="panel-body">
        @foreach (var item in Model)
        {
<div class="row">
    @{var location = "location_";
        var item_Event_Name = "item_Event_Name_";
        var item_TicketPrice = "item_TicketPrice_";
        var item_WholePrice = "item_WholePrice_"; }
    <div class="col-lg-12">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@item.Event.Name"></label>
                <input class="form-control" asp-for="@item.Event.Name" id="@item_Event_Name+@Guid.NewGuid().ToString()" disabled>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="@item.Event.Location"></label>
                <input class="form-control" asp-for="@item.Event.Location" id="@location+@Guid.NewGuid().ToString()" disabled>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@item.Event.When"></label>
                <input class="form-control" asp-for="@item.Event.When" disabled>
            </div>
            <div class="form-group col-md-6">

            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="@item.TicketPrice"></label>
                <input class="form-control" asp-for="@item.TicketPrice" id="@item_TicketPrice+@Guid.NewGuid().ToString()" disabled>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="@item.TicketCount"></label>
                <input class="form-control" asp-for="@item.TicketCount" disabled>
                @Html.ValidationMessageFor(m => @item.TicketCount, null, new { @class = "text-danger" })
            </div>
            <div class="form-group col-md-2">
                <label asp-for="@item.WholePrice"></label>
                <input class="form-control" asp-for="@item.WholePrice" id="@item_WholePrice+@Guid.NewGuid().ToString()" disabled>
            </div>
        </div>
    </div>

</div>
                <hr>}

    </div>
</div>

















    }

