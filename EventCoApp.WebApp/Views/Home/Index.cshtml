<section class="banner-area relative">
    <div class="overlay overlay-bg"></div>
    <div class="container">
        <div class="row fullscreen align-items-center justify-content-between">
            <div class="col-lg-6 col-md-6 banner-left">
                <h6 class="text-white">Away from monotonous life</h6>
                <h1 class="text-white">Event Co</h1>
                <p class="text-white">
                </p>
                <a asp-area="" asp-controller="Events" asp-action="Index" class="primary-btn text-uppercase">Get Started</a>
            </div>
            <div class="col-lg-4 col-md-6 banner-right">
                <ul class="nav nav-tabs" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="event1-tab" data-toggle="tab" href="#flight" role="tab" aria-controls="flight" aria-selected="true">Events</a>
                    </li>
                </ul>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="event1" role="tabpanel" aria-labelledby="flight-tab">
                        <form asp-action="Index" asp-controller="Events" class="form-wrap" method="post" role="form">
                            @* <input type="text" class="form-control" name="name" placeholder="From " onfocus="this.placeholder = ''" onblur="this.placeholder = 'From '">*@
                            @* <input type="text" class="form-control" name="to" placeholder="To " onfocus="this.placeholder = ''" onblur="this.placeholder = 'To '">*@
                            @*<input type="text" class="form-control" name="start" placeholder="Location " onfocus="this.placeholder = ''" onblur="this.placeholder = 'Location '">*@
                            @Html.EditorFor(m => m.From, additionalViewData: new { htmlAttributes = new { @class = "form-control" } })
                            @Html.EditorFor(m => m.To, additionalViewData: new { htmlAttributes = new { @class = "form-control" } })
                            @Html.DropDownListFor(m => m.LocationId, Model.Locations, new { @class = "form-control" })
                            @Html.DropDownListFor(m => m.EventTypeId, Model.EventTypes, new { @class = "form-control" })
                            <input type="submit" class="primary-btn text-uppercase" value="Search" />
                            @*<a href="#" class="primary-btn text-uppercase">Search</a>*@
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="destinations-area section-gap">
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="menu-content pb-40 col-lg-8">
                <div class="title text-center">
                    <h1 class="mb-10">News</h1>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="row">
                @if (Model.News!=null)
                @foreach (var item in Model.News)
                {
                    <div class="col-lg-4">
                        <div class="single-destinations">
                            <div class="thumb">
                                @if (@item.Images != null && @item.Images.Count != 0)
                                {
                                    <img src='~/images/@item.Images.FirstOrDefault().ImageData' height="300" alt="">}
                            </div>
                            <div class="details">
                                <h4 class="d-flex justify-content-between">
                                    <span>@item.Name</span>
                                    @*<div class="star">
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star checked"></span>
                                            <span class="fa fa-star"></span>
                                        </div>*@
                                </h4>
                                @*<p>
                                        View on map   |   49 Reviews
                                    </p>*@
                                <ul class="package-list">
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Created</span>
                                        <span>@item.CreatedOn</span>
                                    </li>

                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Creator</span>
                                        <span>@item.CreatedBy</span>
                                    </li>
                                    <li class="d-flex justify-content-between align-items-center">
                                        <span>Description</span>
                                        <span>@item.Description</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>}
            </div>
        </div>
    </div>
</section>

